{
    "manifest_version": 2,
    "name": "VolumeFox",
    "version": "1.0",
    "description": "A FOSS volume booster for your browser.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon16.png",
        "default_popup": "popup/popup.html",
        "default_title": "VolumeFox"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "popup/popup.js"
            ]
        }
    ]
}